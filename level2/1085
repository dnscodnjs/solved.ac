import java.util.*;

class Main {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);

        int x = in.nextInt();
        int y = in.nextInt();
        int w = in.nextInt();
        int h = in.nextInt();

        int a = x - 0;
        int b = w - x;
        int c = h - y;
        int d = y - 0;

        int[] arr = {a,b,c,d};

        Arrays.sort(arr);
        System.out.println(arr[0]);
    }
}
