import java.util.Arrays;
import java.util.Comparator;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);

        int N = in.nextInt();

        int num = 665;
        int count = 0;

        while(true){
            num ++;
            //num 에 "666"이 있는지 확인
            if(Integer.toString(num).contains("666")){
                count++;
            }
            if(N == count){
                break;
            }
        }
        System.out.println(num);
    }
}
